{% extends 'base.html.twig' %}

{% block content_header %}
    <h2>Choose option</h2>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">{{ tournament.name }}</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ tournament.description }}</p>
                </div>
            </div>
        </div>
    </div>

    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">

                    {% for item in pagination %}

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead">
                                                <b>{{ item.title|length > 40 ? item.title|slice(0, 40)~'...' : item.title }}</b>
                                            </h2>
                                            <p class="text-muted text-sm">
                                                {{ item.description|slice(0,100) }}
                                            </p>

                                        </div>
                                        <div class="col-5 text-center">
                                            <img src="https://media-exp1.licdn.com/dms/image/C4E03AQFtYIhJRQ7xvg/profile-displayphoto-shrink_800_800/0/1516291647405?e=1615420800&v=beta&t=6V-jvtptiI1HNg3JaC3BhubSqyTM8vhfqWGVMXmorF0"
                                                 alt="user-avatar" class="img-circle img-fluid">
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a href="{{ path('option-in-tournament-show',{'id':item.id}) }}"
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-user"></i> Show
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% else %}
                        No options here
                    {% endfor %}

                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                {{ knp_pagination_render(pagination) }}
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->

    </section>


{% endblock %}