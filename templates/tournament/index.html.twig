{% extends 'base.html.twig' %}

{% block content_header %}
    <h2>Select tournament</h2>
{% endblock %}

{% block body %}



    <div class="row">
        {% for item in pagination %}
            {% set tournament = item.tournamentUser.idTournament %}
            {% set uType = item.tournamentUser.tournamentUserType %}

            <div class="col-lg-4 col-md-6 custom-card">

                <div class="card
                            {% if uType == tournament_privilege.T_ADMIN %}
                                card-danger
                            {% elseif uType == tournament_privilege.T_MODDER %}
                                card-warning
                            {% else %}
                                card-gray-dark
                            {% endif %}
                            ">
                    <div class="card-header">
                        <h3 class="card-title">
                            {{ tournament.id }}: {{ tournament.name|length > 50 ? tournament.name|slice(0,50)~'...' : tournament.name }}
                        </h3>

                        <div class="card-tools">
                            <span class="badge">
                                ({{ item.options }})
                            </span>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <div class="card-body">
                        <p class="card-text">
                            {{ tournament.description|length > 150 ? tournament.description|slice(0,150)~'...' : tournament.description }}
                        </p>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <a href="{{ path('tournament-show',{'id':tournament.id}) }}" class="btn btn-primary">Show</a>
                        <a href="{{ path('tournament-edit',{'id':tournament.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('option-in-tournament-new',{'tournament':tournament.id}) }}" class="btn btn-info">Add</a>
                        <a href="{{ path('tournament-user', {'tournament':tournament.id}) }}" class="btn btn-secondary">Show users</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
            </div>



        {% else %}
            <div class="col-md-12">
                <span>No data</span>
            </div>
        {% endfor %}


    </div>

    <div class="row">
        <div class="col-md-12">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}